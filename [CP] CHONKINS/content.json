                "replace brown": "true"
            }
        },
        {
            "Action": "Load",
            "Target": "Animals/Void Chicken",
            "FromFile": "assets/chonkin_void_{{variant}}.png",
            "When": {
                "replace void": "true"
            }
        },
        {
            "Action": "Load",
            "Target": "Animals/White Chicken",
            "FromFile": "assets/chonkin_white_{{variant}}.png",
            "When": {
                "replace white": "true"
            }
        },
        //objects
