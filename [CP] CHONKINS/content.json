{
    "Format": "1.6",
    "ConfigSchema": {
        "replace void": {
            "AllowValues": "true, false"
        },
        "replace blue": {
            "AllowValues": "true, false"
        },
        "replace brown": {
            "AllowValues": "true, false"
        },
        "replace white": {
            "AllowValues": "true, false"
        },
        "replace objects": {
            "AllowValues": "true, false"
        },
        "variant": {
            "AllowValues": "nowattle, wattle",
            "Default": "nowattle"
        }
    },
    "Changes": [
        //chicken sprites
        {
            "Action": "Load",
            "Target": "Animals/Blue Chicken",
            "FromFile": "assets/chonkin_blue_{{variant}}.png",
